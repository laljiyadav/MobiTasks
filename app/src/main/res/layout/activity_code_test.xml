<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.erlaljiyadav.mobitask.activites.CodeTestActivity">

    <TextView
        android:id="@+id/txt_test_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:text="This is my Text Dynamically"
        />
    <TextView
        android:id="@+id/txt_test_color2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="30dp"
        android:text="This is my Text Dynamically"
        />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/input_user_name"
        android:layout_height="wrap_content"
        android:textColorHint="@color/gray500">
        <EditText
            android:id="@+id/login_input_user_name"
            android:textColor="@color/blue_500"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="2dip"
            android:inputType="textPersonName"
            android:maxLength="30"
            android:drawableLeft="@drawable/user"
            android:hint="@string/hint_user_name" />
    </android.support.design.widget.TextInputLayout>
</LinearLayout>
