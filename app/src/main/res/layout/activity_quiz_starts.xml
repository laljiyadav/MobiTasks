<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.erlaljiyadav.mobitask.activites.QuizStarts">

<include layout="@layout/toolbar"/>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:weightSum="1"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/roboto"
                android:id="@+id/question_number"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.2"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="1/15"
                android:background="@drawable/btn_boarder"
                android:layout_width="0dp"
                android:layout_height="30dp" />

            <TextView
                android:fontFamily="@font/roboto"
                android:id="@+id/question"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center_vertical"
                android:text="Can you tell one thing that he likes most about official meetings"
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/timeremaining"
                android:textAlignment="textEnd"
                android:padding="3dp"
                android:layout_weight="0.2"
                android:layout_width="0dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_height="wrap_content"
                android:gravity="end" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                ads:adSize="MEDIUM_RECTANGLE"
                ads:adUnitId="ca-app-pub-2138537863328187/8316597317"/>

        </RelativeLayout>

        <LinearLayout
            android:padding="5dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <Button
                android:fontFamily="@font/roboto"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="answer 1"
                android:background="@drawable/btn_boarder"
                android:id="@+id/answer1"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="20sp"
                android:layout_height="match_parent" />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:fontFamily="@font/roboto"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="answer 2"
                android:background="@drawable/btn_boarder"
                android:id="@+id/answer2"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                ads:adSize="SMART_BANNER"
                ads:adUnitId="ca-app-pub-2138537863328187/8316597317"/>

        </RelativeLayout>


        <LinearLayout
            android:padding="5dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <Button
                android:fontFamily="@font/roboto"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="answer 3"
                android:background="@drawable/btn_boarder"
                android:id="@+id/answer3"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"/>
            <Button
                android:fontFamily="@font/roboto"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="answer 4"
                android:background="@drawable/btn_boarder"
                android:id="@+id/answer4"
                android:layout_weight="1"
                android:textSize="20sp"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>
    </LinearLayout>

</ScrollView>





</LinearLayout>