<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:padding="10dp"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/newspaper"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/txt_news_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Latest News"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="@color/blue_gray"
                android:layout_marginLeft="10dp"
                />
            <TextView
                android:id="@+id/txt_published_at"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray600"
                android:text="10:10"
                android:gravity="bottom"
                android:textAlignment="gravity"
                android:fontFamily="@font/roboto_thin"
                android:layout_marginLeft="10dp"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/img_news"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            />
        <TextView
            android:id="@+id/txt_news_headlines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/blue_gray"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <ImageView
                android:id="@+id/img_news_share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/share"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/txt_readmore"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_boarder_blue"
                android:text="Read more"
                android:fontFamily="@font/roboto"
                android:textAlignment="center"
                android:textColor="@color/light_blue"
                android:gravity="center"
                android:layout_gravity="center" />
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray500"/>

</LinearLayout>